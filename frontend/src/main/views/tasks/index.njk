{% extends "layouts/main.njk" %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">Tasks</h1>

      <p class="govuk-body-l">Manage your casework tasks efficiently</p>

      {% if tasks.length === 0 %}
        <a href="/tasks/create" class="govuk-button" data-module="govuk-button">
          Create new task
        </a>
      {% endif %}
    </div>
  </div>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      {% if tasks.length > 0 %}
        <table class="govuk-table">
          <caption class="govuk-table__caption govuk-table__caption--m">All tasks</caption>
          <thead class="govuk-table__head">
            <tr class="govuk-table__row">
              <th scope="col" class="govuk-table__header">Title</th>
              <th scope="col" class="govuk-table__header">Status</th>
              <th scope="col" class="govuk-table__header">Due date</th>
              <th scope="col" class="govuk-table__header">Created</th>
              <th scope="col" class="govuk-table__header">Actions</th>
            </tr>
          </thead>
          <tbody class="govuk-table__body">
            {% for task in tasks %}
              <tr class="govuk-table__row">
                <td class="govuk-table__cell">
                  <strong>{{ task.title }}</strong>
                  {% if task.description %}
                    <br><span class="govuk-hint">{{ task.description | truncate(50) }}</span>
                  {% endif %}
                </td>
                <td class="govuk-table__cell">
                  <strong class="govuk-tag {{ task.status | statusBadge }}">
                    {{ task.status | replace("_", " ") }}
                  </strong>
                </td>
                <td class="govuk-table__cell">
                  {% if task.dueDateTime %}
                    {{ task.dueDateTime | formatDate }}
                  {% else %}
                    <span class="govuk-hint">No due date</span>
                  {% endif %}
                </td>
                <td class="govuk-table__cell">{{ task.createdAt | formatDate }}</td>
                <td class="govuk-table__cell">
                  <a href="/tasks/{{ task.id }}/edit" class="govuk-button govuk-button--secondary" style="margin-bottom: 5px; display: block; width: fit-content;">Edit</a>
                  <form method="POST" action="/tasks/{{ task.id }}/delete" style="display: block;">
                    <button type="submit" class="govuk-button govuk-button--secondary" style="width: fit-content;"
                            onclick="return confirm('Are you sure you want to delete this task?')">
                      Delete
                    </button>
                  </form>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>

        <div class="govuk-grid-row" style="margin-top: 20px;">
          <div class="govuk-grid-column-two-thirds">
            <a href="/tasks/create" class="govuk-button" data-module="govuk-button">
              Create new task
            </a>
          </div>
        </div>
      {% else %}
        <div class="govuk-inset-text">
          You have no tasks. <a href="/tasks/create" class="govuk-link">Create your first task</a>.
        </div>
      {% endif %}
    </div>
  </div>
{% endblock %}
